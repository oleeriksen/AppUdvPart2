@page "/bike"
@using Core
@inject HttpClient http
<PageTitle>Bikes</PageTitle>

<h1>Bikes</h1>

@if (bikes == null)
{
    <p><em>Loading...</em></p>
}
else
{
     
    <table class="table table-striped">
        
        <tbody> 
            @foreach (var bike in bikes)
            {
                <tr class="bikeRow">
                    <td><h2>@bike.Brand - @bike.Model</h2><br />
                    Price: @bike.Price kr.</td>
                    <td><img class="bikeImg" src="@bike.ImageUrl" width="200px"/></td>
                </tr>
            }
        </tbody>
    </table>
    
}

@code {

    private Bike[]? bikes;

    

    protected override async Task OnInitializedAsync()
    {
        bikes = await http.GetFromJsonAsync<Bike[]>("http://localhost:5217/api/bike");
    }
    
    
    

}

