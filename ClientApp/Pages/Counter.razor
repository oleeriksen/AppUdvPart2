@page "/counter"
@using ClientApp.Model
@inject Blazored.LocalStorage.ILocalStorageService localStore


<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<TimeComponent></TimeComponent>

<p style="@counterStyle" role="status">Current count: @currentCount</p>

<p role="status">Random number: @randomNumber</p>

@if (loggedIn != null && loggedIn.Role.Equals("admin", StringComparison.CurrentCultureIgnoreCase))
{
     <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
}
@code {
    private int currentCount = 0;

    private int randomNumber = 0;

    private string counterStyle = "";

    private User? loggedIn;

    protected override async Task OnInitializedAsync()
    {
        int data = await localStore.GetItemAsync<int>("counter");
        currentCount = data;
        loggedIn = await localStore.GetItemAsync<User?>("user");
    }

    private void IncrementCount()
    {
        currentCount += 1;
        randomNumber = Random.Shared.Next(currentCount + 1);
        if (currentCount == 21) // 21 is the day of my birthday
            counterStyle = "color:red";
        else
            counterStyle = "";

        localStore.SetItemAsync<int>("counter", currentCount);
    }

}
