@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p style="@counterStyle" role="status">Current count: @currentCount</p>

<p role="status">Random number: @randomNumber</p>


<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private int randomNumber = 0;

    private string counterStyle = "";

    
    private void IncrementCount()
    {
        currentCount += 1;
        randomNumber = Random.Shared.Next(currentCount + 1);
        if (currentCount == 21) // 21 is the day of my birthday
            counterStyle = "color:red";
        else
            counterStyle = "";

    }

}